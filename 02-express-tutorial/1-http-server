const http = require('http')
const { readFileSync } = require('fs')

//get all files 
const homePage = readFileSync('./navbar-app/index.html')
const homeStyle = readFileSync('./navbar-app/styles.css')
const homeImage = readFileSync('./navbar-app/logo.svg')
const homeLogic = readFileSync('./navbar-app/browser-app.js')

const server = http.createServer((req, res) => {
    const url = req.url
    if (url === '/') {
        res.writeHead(200, { 'content-type': 'text/html' })//pass in http status code and content type
        res.write(homePage)//write body
        res.end()
    }
    else if (url === '/about') {
        res.writeHead(200, { 'content-type': 'text/html' })//pass in http status code and content type
        res.write('<h1>About page </h1>')//write body
        res.end()
    }
    else if (url === '/styles.css') {
        res.writeHead(200, { 'content-type': 'text/css' })//pass in http status code and content type
        res.write(homeStyle)//write body
        res.end()
    }
    else if (url === '/logo.svg') {
        res.writeHead(200, { 'content-type': 'image/svg+xml' })//pass in http status code and content type
        res.write(homeImage)//write body
        res.end()
    }
    else if (url === '/browser-app.js') {
        res.writeHead(200, { 'content-type': 'text/javascript' })//pass in http status code and content type
        res.write(homeLogic)//write body
        res.end()
    }
    else {
        //request and response parameter
        res.writeHead(404, { 'content-type': 'text/html' })//pass in http status code and content type
        res.write('<h1>Error </h1>')//write body
        res.end()
    }

})

server.listen(5000)
//different port for different thing; https: 423 

